doctype html
head
  meta(charset='UTF-8')
  title ATM STATUS
style.
  canvas {
  display: none;
  }
  hr {
  margin-top: 32px;
  }
  input[type="file"] {
  display: block;
  margin-bottom: 16px;
  }
  div {
  margin-bottom: 16px;
  }
  #logo {
    width: 60%;
  }
  .btn {
    border: none;
    font-family: 'Lato';
    font-size: inherit;
    color: inherit;
    background: none;
    cursor: pointer;
    padding: 25px 80px;
    display: inline-block;
    margin: 15px 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
    outline: none;
    position: relative;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
    background: #2ecc71;
    color: #fff;
  }
  h1 {
    font-family: 'Lato';
  }

